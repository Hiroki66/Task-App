<%= form_with(model: [@user, @task], local: true) do |f| %>
  <%= render 'shared/error_messages', object: @task %>

<%= f.label :task, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.label :detail, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :detail, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>