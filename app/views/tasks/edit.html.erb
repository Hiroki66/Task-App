<% provide(:title, "Edit") %>

<div class="container">
  <h1>タスク編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
        <%= render 'shared/error_messages', object: @task %>
      
        <%= f.label :task, class: "label-form" %>
        <%= f.text_field :task, class: "form-control", value: @task.task %>
      
        <%= f.label :detail, class: "label-form" %>
        <%= f.text_field :detail, class: "form-control", value: @task.detail %>
        
        <%= f.submit "登録", class: "btn btn-primary btn-form" %>
        <%= link_to "キャンセル", user_tasks_path, class: "btn btn-default btn-form" %>
      <% end %>
    </div>
  </div>
</div>