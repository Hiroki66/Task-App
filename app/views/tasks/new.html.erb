<% provide(:title, "New Task") %>

<div class="container">
  <%= @task.errors.full_messages %>
  <h1>タスク新規作成</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(url: user_tasks_path, local: true,) do |f| %>
        <!--%= render 'shared/error_messages', object: @user %>-->
      
        <%= f.label :task, class: "label-form" %>
        <%= f.text_field :task, class: "form-control" %>
      
        <%= f.label :detail, class: "label-form" %>
        <%= f.text_field :detail, class: "form-control" %>
        
        <%= f.submit "登録", class: "btn btn-primary btn-block btn-form" %>
      <% end %>
    </div>
  </div>
</div>